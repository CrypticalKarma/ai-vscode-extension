{
  "name": "ai-vscode-extension",
  "displayName": "AI VSCode Extension",
  "description": "Work with AI to see and edit your projects directly in VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.6.2",
    "@types/vscode": "^1.80.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vscode/test-electron": "^2.3.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "contributes": {
    "commands": [
      {
        "command": "aiAssistant.showFiles",
        "title": "AI Assistant: Show Project Files"
      },
      {
        "command": "aiAssistant.readFile",
        "title": "AI Assistant: Open File in Panel"
      },
      {
        "command": "aiAssistant.openPanel",
        "title": "AI Assistant: Open Panel"
      }
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "openai": "^5.16.0"
  }
}
