{
  "name": "ai-vscode-extension",
  "displayName": "AI VSCode Extension",
  "description": "Work with AI to see and edit your projects directly in VS Code.",
  "version": "0.0.1",
  "engines": { "vscode": "^1.80.0" },
  "activationEvents": ["onCommand:aiAssistant.showFiles","onCommand:aiAssistant.readFile"],
  "main": "./out/extension.js",
  "scripts": { "vscode:prepublish": "tsc -p ./", "compile": "tsc -watch -p ./" },
  "devDependencies": { "typescript": "^5.2.2","@types/node": "^20.6.2","vscode": "^1.80.0" },
  "contributes": {
    "commands": [
      { "command": "aiAssistant.showFiles", "title": "Show Project Files" },
      { "command": "aiAssistant.readFile", "title": "Open File in AI Panel" }
    ]
  }
}