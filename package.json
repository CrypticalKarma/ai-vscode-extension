{
  "name": "ai-vscode-extension",
  "displayName": "AI VSCode Extension",
  "description": "Work with AI to see and edit your projects directly in VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onCommand:aiAssistant.showFiles",
    "onCommand:aiAssistant.readFile",
    "onCommand:aiAssistant.openPanel"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "test": "vscode-test"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/node": "^20.6.2",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.9"
  },
  "contributes": {
    "commands": [
      {
        "command": "aiAssistant.showFiles",
        "title": "AI Assistant: Show Project Files"
      },
      {
        "command": "aiAssistant.readFile",
        "title": "AI Assistant: Open File in Panel"
      },
      {
        "command": "aiAssistant.openPanel",
        "title": "AI Assistant: Open Panel"
      }
    ]
  }
}
